  "devDependencies": {
    "@figliolia/event-emitter": ">=1.2.0",
    "@figliolia/signals": ">=1.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.1",
    "@types/react": ">=18.0.0",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.0.0",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.36.0",
    "oxlint-tsgolint": "^0.12.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@figliolia/event-emitter": ">=1.2.0",
    "@figliolia/signals": ">=1.2.0",
    "@types/react": ">=18.0.0",
    "react": ">=18.0.0"
  }
