{
  "name": "@figliolia/react-signals",
  "version": "1.1.1",
  "description": "React bindings for a signals implemenation loosely based on the TC39 Proposal",
  "keywords": [
    "javascript",
    "signals",
    "typescript",
    "react"
  ],
  "license": "ISC",
  "author": "Alex Figliolia",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "vitest",
    "build": "tsdown",
    "lint": "oxlint --type-aware --type-check --report-unused-disable-directives --fix && oxfmt"
